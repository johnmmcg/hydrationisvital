<div class="row">
  <div class="small-12 small-centered columns animated fadeInDown form">

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name))do |f| %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "off", placeholder: 'your@email.com' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "'password' is not a good password"%>
      </div>

      <div class="field">
        <%= f.label :daily_goal %>
        <%= f.text_field :daily_goal, placeholder: '10', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :metric %>
        <%= f.text_field :metric, placeholder: 'cups', autocomplete: "off"%>
      </div>


      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>

  <div class="loginlink animated fadeInUp">
    <%= link_to 'Already a user? Log in here.', new_user_session_path %>
  </div>

</div>
