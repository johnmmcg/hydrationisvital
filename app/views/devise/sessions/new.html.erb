<div class="row">
  <div class="small-12 small-centered columns animated fadeInDown form">

    <h2>Log in</h2>

    <%= form_for :user do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

  </div>

  <div class="signinlink animated fadeInUp">
    <%= link_to 'Not registered? Sign up here.', new_user_registration_path %>
  </div>
</div>
